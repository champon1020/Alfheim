{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["./src"]
}
