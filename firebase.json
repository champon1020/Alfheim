{
  "functions": {
    "runtime": "nodejs10",
    "predeploy": "npm --prefix functions run build"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/share/*",
        "function": "share"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
